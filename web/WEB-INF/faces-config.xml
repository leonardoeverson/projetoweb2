<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/cadastro_venda.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/cadastro_venda.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fracasso</from-outcome>
            <to-view-id>/cadastro_venda.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/cadastro_venda.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fracasso</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/vendas.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>psucesso</from-outcome>
            <to-view-id>/itens_venda.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>pfracasso</from-outcome>
            <to-view-id>/vendas.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
